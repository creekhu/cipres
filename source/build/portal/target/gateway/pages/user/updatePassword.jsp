<%@ taglib prefix="s" uri="/struts-tags" %>
<head>
  <title>User Password Update</title>
  <content tag="menu">My Profile</content>
</head>

<body>
<h2>Update Password</h2>
<s:form id="update-password" cssClass="form-horizontal" action="updatePassword" theme="simple" role="form">
  <div class="form-group">
    <label class="col-xs-2 control-label">Current Password</label>
    <div class="col-xs-10">
      <s:password cssClass="form-control" name="currentPassword" placeholder="Current Password"/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-2 control-label">New Password</label>
    <div class="col-xs-10">
      <s:password cssClass="form-control" name="newPassword" placeholder="New Password"/>
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-2 control-label">New Password Confirmation</label>
    <div class="col-xs-10">
      <s:password cssClass="form-control" name="confirmNewPassword" placeholder="New Password Confirmation"/>
    </div>
  </div>
  <div class="form-group form-buttons">
    <div class="col-xs-12">
      <s:submit value="Update Password" cssClass="btn btn-primary"/>
      <s:reset value="Reset" cssClass="btn btn-primary"/>
    </div>
  </div>
</s:form>
</body>
